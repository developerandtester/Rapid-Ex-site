    <script>
        function reveal() {
            var reveals = document.querySelectorAll(".reveal");

            for (var i = 0; i < reveals.length; i++) {
                var windowHeight = window.innerHeight;
                var elementTop = reveals[i].getBoundingClientRect().top;
                var elementVisible = 150;

                if (elementTop < windowHeight - elementVisible) {
                    reveals[i].classList.add("active");
                } else {
                    reveals[i].classList.remove("active");
                }
            }
        };

        window.addEventListener("scroll", reveal);

        function submitForm() {
            $('#submit').val('Sending...');
            var frm = document.getElementsByName('my_form')[0];            
            var Name = $("#txtName").val();
            var Email = $("#txtEmail").val();
            var Mobile = $("#txtMobile").val();
            var Subject = $("#txtSubject").val();
            var Company = $("#txtCompanyname").val();
            var Message = $("#txtMessage").val();
            $.ajax({
                method:"POST",
                url: "@System.Configuration.ConfigurationManager.AppSettings["FolderPath"]/Home/SendMail",
                data: { Name: Name, Email: Email, Mobile: Mobile, Subject: Subject, Company: Company, Message: Message },
                success: function (data) {
                    alert("You will get a response from our Executive within 48hrs!!!");
                    var url = '@Url.Action("Index", "Home")';
                        window.location.href = url;
                }
            });
        };


    </script>
